<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:security="http://www.springframework.org/schema/security"
	xsi:schemaLocation="http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-4.1.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">



	<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++ -->
	<!-- DEFINITION DE LA STRATEGIE DE SECURITE -->
	<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++ -->

	<security:http auto-config="true" use-expressions="true">

		<security:intercept-url
			pattern="/ajouterProduit"
			access="hasAnyRole('ROLE_AdminCategories, ROLE_AdminProduits, ROLE_ANONYMOUS')" />
		
		<!-- Personalisation du formulaire de connexion -->
		<security:form-login login-page="/login.jsp"
		 				 default-target-url="/messageList"
		 				 authentication-failure-url="/login.jsp?error=true"
		 				 login-processing-url="/login"
		 				 username-parameter="username"
		 				 password-parameter="password"/>
		 				 
		<!-- Desactivation de la securitÃ© de hacking -->
		<security:csrf disabled="true" />

	</security:http>

	<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++ -->
	<!-- DEFINITION DES UTILISATEURS -->
	<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++ -->

	<security:authentication-manager>
		<security:authentication-provider>
			<security:jdbc-user-service
				data-source-ref="dataSourceBean" 
				users-by-username-query="SELECT actived, password, username FROM users WHERE username=?" 
				authorities-by-username-query="SELECT u.username, r.rolename FROM users u, roles r
											   WHERE u.id_user = r.user_id AND u.username="/>

		</security:authentication-provider>


	</security:authentication-manager>

</beans>
